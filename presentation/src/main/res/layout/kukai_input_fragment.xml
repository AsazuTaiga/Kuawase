<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/default_padding"
    tools:context=".screen.kukaiinput.KukaiInputFragment">

    <TextView
        android:id="@+id/kukai_name_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:labelFor="@id/kukai_name_edit"
        android:text="@string/kukai_name_hint" />

    <EditText
        android:id="@+id/kukai_name_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:layout_below="@id/kukai_name_hint"
        android:background="@drawable/text_box"
        android:textSize="@dimen/font_size_big"
        tools:ignore="Autofill" />

    <TextView
        android:id="@+id/start_date_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/kukai_name_edit"
        android:layout_marginTop="80dp"
        android:text="@string/start_date_caption" />

    <TextView
        android:id="@+id/start_date_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/start_date_hint"
        android:background="@drawable/text_back"
        android:singleLine="true"
        android:textSize="@dimen/font_size_big" />

    <Button
        android:id="@+id/start_date_button"
        android:layout_width="match_parent"
        android:layout_below="@id/start_date_text"
        android:layout_height="@dimen/button_height"
        android:text="@string/choose_start_date" />

    <TextView
        android:id="@+id/end_date_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/start_date_button"
        android:layout_marginTop="40dp"
        android:text="@string/end_date_hint" />

    <TextView
        android:id="@+id/end_date_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/end_date_hint"
        android:background="@drawable/text_back"
        android:singleLine="true"
        android:textSize="@dimen/font_size_big" />

    <Button
        android:id="@+id/end_date_button"
        android:layout_width="match_parent"
        android:layout_below="@id/end_date_text"
        android:layout_height="@dimen/button_height"
        android:text="@string/choose_end_date" />

    <Button
        android:id="@+id/finish_input_button"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="@dimen/button_height"
        android:text="@string/finish_input" />

</RelativeLayout>